<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>edu.columbia.dbmi.cwlab</groupId>
	<artifactId>criteria2query-exp</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>criteria2query-exp</name>
	<url>http://maven.apache.org</url>

	<properties>
		<java.version>1.8</java.version>
		<maven.compiler.version>3.8.1</maven.compiler.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<build>
		<finalName>criteria2query-exp</finalName>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>UTF-8</encoding>
					<!-- adding local jars to compiling -->
					<compilerArgs>
						<arg>-extdirs</arg>
						<arg>${project.basedir}/src/lib</arg>
					</compilerArgs>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>
								edu.columbia.dbmi.cwlab.criteriaparser.main.Main
							</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		</plugins>
		<resources>
				<resource>
					<directory>src/main/java</directory>
					<includes>
						<include>edu/columbia/dbmi/cwlab/model/*.ser.gz</include>
						<include>edu/columbia/dbmi/cwlab/model/*.gz</include>
						<include>edu/columbia/dbmi/cwlab/model/*.model</include>
						<include>edu/columbia/dbmi/cwlab/model/*.txt</include>
						<include>edu/columbia/dbmi/cwlab/model/*.sutime.txt</include>
						<include>edu/columbia/dbmi/cwlab/model/**/*.*</include>
						<include>edu/columbia/dbmi/cwlab/model/**/*</include>
						<include>edu/columbia/dbmi/cwlab/models/*.ser.gz</include>
						<include>edu/columbia/dbmi/cwlab/models/*.gz</include>
						<include>edu/columbia/dbmi/cwlab/models/*.model</include>
						<include>edu/columbia/dbmi/cwlab/models/*.txt</include>
						<include>edu/columbia/dbmi/cwlab/models/*.sutime.txt</include>
						<include>edu/columbia/dbmi/cwlab/models/**/*.*</include>
						<include>edu/columbia/dbmi/cwlab/models/**/*</include>
					</includes>

				</resource>
		</resources>



	</build>


	<dependencies>
